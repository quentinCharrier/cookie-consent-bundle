{% form_theme form '@CHCookieConsent/form/cookie_consent_theme.html.twig' %}

{% block script %}
    <script type="text/javascript" src="{{ asset('bundles/chcookieconsent/js/cookie_consent.js') }}"></script>
{% endblock %}

<div class="ui modal transition ch-cookie-consent ch-cookie-consent ch-cookie-consent--{{ theme }}-theme">
    
    <div class="header">
        {% block title %}
            {{ 'ch_cookie_consent.title'|trans({}, 'CHCookieConsentBundle') }}
        {% endblock %}
    </div>

    <div class="content">
        {% block intro %}
            <p class="">{{ 'ch_cookie_consent.intro'|trans({}, 'CHCookieConsentBundle') }}
                {% block read_more %}
                    <a class="" href="{% block read_more_link %}{{ path_to_cookie_policy }}{% endblock %}">{{ 'ch_cookie_consent.read_more'|trans({}, 'CHCookieConsentBundle') }}</a>
                {% endblock %}
            </p>
        {% endblock %}
        
        {{ form_start(form, {'method': 'post', 'action': path('ch_cookie_consent.show'), 'attr': {'class': 'ch-cookie-consent__form'}}) }}
            {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
    {% block submit_button %}
        <div class="actions">
            <button type="submit" class="ui positive button btn ch-cookie-consent__btn">{{ 'ch_cookie_consent.save'|trans({}, 'CHCookieConsentBundle') }}</button>
        </div>
    {% endblock %}
</div>
    